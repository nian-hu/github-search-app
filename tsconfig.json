{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "#/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./dist", // Specify an output directory
    "noEmit": true // Prevent emitting files
  },
  "include": ["src/**/*"],
  "exclude": [
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "node_modules",
    "dist"
  ]
}
